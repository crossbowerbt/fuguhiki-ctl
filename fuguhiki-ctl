VND_OUTER = vnd3
VND_OUTER_PART = vnd3a
VND_OUTER_MOUNT = /sysmedia

VND_INNER = vnd4
VND_INNER_PART = vnd4a
VND_INNER_MOUNT = /fuguita

MBR_PATCH = "...\n\
